@model IEnumerable<CuentasFinal.Models.CREDITO>

@{
    ViewBag.Title = "Index";
}

<img src="~/Scripts/logo.jpg" width="200">

<p>
    @Html.ActionLink(" Nuevo Prestamo", "Create")
</p>
<table class="table table-striped ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CLIENTE.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESTADOCREDITO.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CLIENTE.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESTADOCREDITO.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCredito }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdCredito }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdCredito })
        </td>
    </tr>
}

</table>
