@model IEnumerable<CuentasFinal.Models.MONTOCREDITO>

@{
    ViewBag.Title = "Index";
}

<img src="~/Scripts/logo.jpg" width="200">

<p>
    @Html.ActionLink("Crear Nuevo Monto", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREDITO.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREDITO.Detalle)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdMonto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdMonto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdMonto })
        </td>
    </tr>
}

</table>
