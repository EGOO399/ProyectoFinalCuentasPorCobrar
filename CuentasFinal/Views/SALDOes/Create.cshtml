                @Html.DropDownList("IdMonto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdMonto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdFactura, "IdFactura", htmlAttributes: new { @class = "control-label col-md-2" })
